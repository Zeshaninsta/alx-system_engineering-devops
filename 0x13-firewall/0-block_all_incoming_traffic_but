#!/bin/bash

# Update package list
sudo apt update

# Install ufw if not already installed
sudo apt install -y ufw

# Allow SSH (port 22)
sudo ufw allow 22/tcp

# Allow HTTPS (port 443)
sudo ufw allow 443/tcp

# Allow HTTP (port 80)
sudo ufw allow 80/tcp

# Enable ufw to start on boot
sudo ufw enable

# Verify the rules
sudo ufw status
